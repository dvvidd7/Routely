{
  "expo": {
    "name": "TrafficApp",
    "slug": "trafficapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "traffic-app",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show your position on the map",
        "NSLocationAlwaysUsageDescription": "We need your location to show your position on the map",
        "NSUserTrackingUsageDescription": "We need your permission to send you notifications about nearby hazards.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.web.app"
    },
    "android": {
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "RECORD_AUDIO",
        "VIBRATE",
        "com.google.android.c2dm.permission.RECEIVE"
      ],
      "package": "com.web.app",
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-router"
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "83d8978d-0abe-48af-b511-d87e4c32a61a"
      }
    }
  }
}
